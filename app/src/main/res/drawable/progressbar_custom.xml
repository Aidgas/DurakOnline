<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="4100"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >
 
    <shape
        android:innerRadius="20dp"
        android:shape="ring"
        android:thickness="4dp"
        android:useLevel="false" >
        <size
            android:height="85dp"
            android:width="85dp" />
 
        <gradient
            android:centerColor="#5517ba0b"
            android:centerY="0.5"
            android:endColor="#ff17ba0b"
            android:startColor="#0017ba0b"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
 
</rotate>
