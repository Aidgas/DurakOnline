<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:buttonStyle">@style/ButtonHeader</item>
        <!--<item name="android:radioButtonStyle">@style/MyRadioButton</item>-->
    </style>

    <style name="ButtonHeader" parent="@android:style/Widget.Button">
        <item name="android:minHeight">18dip</item>
    </style>

    <style name="MyRadioButton" parent="AppTheme">
        <item name="colorControlNormal">@color/c12</item>
        <item name="colorControlActivated">@color/c13</item>
    </style>

    <style name="MyRadioButton2" parent="AppTheme">
        <item name="colorControlNormal">#ccc</item>
        <item name="colorControlActivated">@color/c13</item>
    </style>


    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">#ffd600</item>
        <item name="colorControlActivated">#ffd600</item>
    </style>

    <style name="MyCheckbox2" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">#000</item>
        <item name="colorControlActivated">#000</item>
    </style>

    <style name="SeekBarColor" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">#0f0</item>
        <item name="colorControlNormal">#eee</item>
    </style>

    <style name="RadioButton.Login" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/c13</item>
        <item name="colorPrimaryDark">#ff0000</item>
        <item name="colorPrimary">#0000ff</item>
        <item name="colorControlNormal">@color/c12</item>
        <item name="colorControlActivated">@color/c13</item>
    </style>

</resources>
